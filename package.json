{
  "name": "kricket",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b",
    "lint": "./node_modules/.bin/eslint ./src/**/*.ts",
    "watch": "tsc -b -w",
    "test": "mocha test/**/*.spec.ts* --require ./register.js --bail",
    "docs": "typedoc ./src --options ./typedoc.json --out ./docs && touch ./docs/.nojekyll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blujedis/kricket.git"
  },
  "files": [
    "dist",
    "docs",
    "CHANGE.md",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "fast-json-stable-stringify": "^2.1.0",
    "file-stream-rotator": "^0.5.7",
    "readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/cross-spawn": "^6.0.1",
    "@types/fast-json-stable-stringify": "^2.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.2",
    "@types/readable-stream": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^6.2.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.5.4",
    "tslint": "^6.0.0",
    "typedoc": "^0.17.4",
    "typescript": "^3.7.5"
  }
}
