{
  "name": "kricket",
  "version": "0.2.7",
  "license": "ISC",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org "
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b",
    "lint": "eslint -c ./.eslintrc.js ./src/**/*.ts",
    "lint-fix": "eslint -c ./.eslintrc.js ./src/**/*.ts --fix",
    "watch": "tsc -b -w",
    "docs": "typedoc ./src --options ./typedoc.json --out ./docs && touch ./docs/.nojekyll",
    "test": "mocha tests/**/*.spec.ts* --require ./register.js --bail",
    "commit": "git commit -a -m",
    "commit-pub": "npm run commit -- 'auto commit'",
    "prep": "npm run clean && npm run build && npm run test && npm run lint && npm run docs && npm run commit-pub"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blujedis/kricket.git"
  },
  "files": [
    "dist",
    "docs",
    "CHANGE.md",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "fast-json-stable-stringify": "^2.1.0",
    "file-stream-rotator": "^1.0.0",
    "readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "@types/readable-stream": "^4.0.14",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.9.0",
    "ansi-colors": "^4.1.3",
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "eslint": "^9.2.0",
    "mocha": "^10.4.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  }
}