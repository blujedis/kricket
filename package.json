{
  "name": "kricket",
  "version": "0.3.8",
  "license": "ISC",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org "
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b",
    "lint": "eslint .**/*.ts --no-warn-ignored",
    "lint:fix": "eslint .**/*.ts --fix --no-warn-ignored",
    "watch": "tsc -b -w",
    "docs": "rimraf docs/ && typedoc src/index.ts && touch ./docs/.nojekyll",
    "test": "mocha tests/**/*.spec.ts* --require ./register.js --bail",
    "prep": "npm run clean && npm run build && npm run test && npm run lint && npm run docs"
  },
  "eslintConfig": {
    "extends": "./eslint.config.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blujedis/kricket.git"
  },
  "files": [
    "dist",
    "docs",
    "CHANGE.md",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "fast-json-stable-stringify": "^2.1.0",
    "file-stream-rotator": "^1.0.0",
    "readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "@types/readable-stream": "^4.0.14",
    "ansi-colors": "^4.1.3",
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "globals": "^15.2.0",
    "mocha": "^10.4.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  }
}